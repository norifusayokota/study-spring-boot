<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.study.sample.motocatalog.mappers.UserMapper">
    <select id="selectByUsername" resultType="jp.co.study.sample.motocatalog.model.User">
        SELECT 
            user_name,
            password
        FROM
            m_user
        WHERE
            user_name = #{username}
    </select>
</mapper>